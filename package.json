{
  "name": "kopia-ui",
  "version": "0.1.0",
  "description": "Modern Desktop UI for Kopia Backup",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:build:debug": "tauri build --debug",
    "lint": "eslint . --max-warnings 0 --fix",
    "lint:check": "eslint . --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "validate": "pnpm typecheck && pnpm lint:check && pnpm test:run",
    "validate:fix": "pnpm typecheck && pnpm lint && pnpm format && pnpm test:run",
    "clean": "rm -rf dist node_modules/.vite src-tauri/target",
    "clean:full": "rm -rf dist node_modules src-tauri/target && pnpm install",
    "deps:update": "pnpm update --latest --interactive",
    "kopia:download": "bash scripts/download-kopia.sh",
    "prepare": "husky || true",
    "postinstall": "echo 'âœ“ Dependencies installed. Run: pnpm tauri:dev'"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.9.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^6.28.1",
    "react-hook-form": "^7.65.0",
    "react-i18next": "^16.2.1",
    "i18next": "^25.6.0",
    "zustand": "^5.0.8",
    "zod": "^3.24.1",
    "@hookform/resolvers": "^3.9.1",
    "lucide-react": "^0.548.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@tauri-apps/cli": "^2.9.1",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "typescript-eslint": "^8.46.2",
    "globals": "^15.14.0",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/ui": "^4.0.4",
    "@playwright/test": "^1.56.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/user-event": "^14.6.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.38.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.4"
  },
  "packageManager": "pnpm@10.9.0"
}
