{
  "productName": "Kopia UI",
  "version": "0.1.0",
  "identifier": "com.kopia.ui",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["../bin/kopia*"],
    "externalBin": [],
    "copyright": "",
    "category": "Utility",
    "shortDescription": "Modern Desktop UI for Kopia Backup",
    "longDescription": "A modern, intuitive desktop application for managing Kopia backups, including repository management, snapshots, policies, and restore operations."
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Kopia UI",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  }
}
